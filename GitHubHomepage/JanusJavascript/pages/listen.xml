<DIALOG onInit="liste" >
	<TABLE name='liste'>
		<COLUMN name='value' />
		<COLUMN name='text' />
	</TABLE>
	<VBOX>
		<HBOX>
			<VBOX>
				<COMBO model='liste' tooltip="Model als Comobox"/>
				<LIST model='liste' tooltip="Model als Liste" />
				<RADIO model='liste' tooltip="Model als Radiobuiions" />
			</VBOX>
			<SHOWTABLE model='liste'  tooltip="Model als Tabelle">
				<SHOWCOLUMN name='value' header='Wert' />
				<SHOWCOLUMN name='text' header='Text' />
			</SHOWTABLE>
		</HBOX>
	</VBOX>
</DIALOG>